{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "zephyr",
            "displayName": "Zephyr connect-pro",
            "description": "Build connect-pro with Zephyr SDK",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "BOARD": "connectpro",
                "NO_BUILD_TYPE_WARNING": "TRUE"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "zephyr",
            "hidden": true,
            "configurePreset": "zephyr"
        }
    ]
}