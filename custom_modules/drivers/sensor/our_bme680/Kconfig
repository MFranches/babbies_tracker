menuconfig OUR_BME680
	bool "OUR_BME680 sensor"
	default y
	depends on DT_HAS_OUR_BME680_ENABLED
	select I2C if $(dt_compat_on_bus,$(DT_COMPAT_OUR_BME680),i2c)
	select SPI if $(dt_compat_on_bus,$(DT_COMPAT_OUR_BME680),spi)
	help
	  Enable driver for BME680 I2C- or SPI- based temperature, pressure, humidity and gas sensor.

if OUR_BME680

choice OUR_BME680_TEMP_OVERSAMPLING
	prompt "BME680 temperature oversampling"
	default OUR_BME680_TEMP_OVER_2X
	help
	  Select temperature oversampling for the BME680 sensor.  Higher values
	  lead to more accurate readings, but higher power consumption.
config OUR_BME680_TEMP_OVER_1X
	bool "x1"
config OUR_BME680_TEMP_OVER_2X
	bool "x2"
config OUR_BME680_TEMP_OVER_4X
	bool "x4"
config OUR_BME680_TEMP_OVER_8X
	bool "x8"
config OUR_BME680_TEMP_OVER_16X
	bool "x16"
endchoice

choice OUR_BME680_PRESS_OVERSAMPLING
	prompt "BME680 pressure oversampling"
	default OUR_BME680_PRESS_OVER_16X
	help
	  Select pressure oversampling for the BME680 sensor.  Higher values
	  lead to more accurate readings, but higher power consumption.
config OUR_BME680_PRESS_OVER_1X
	bool "x1"
config OUR_BME680_PRESS_OVER_2X
	bool "x2"
config OUR_BME680_PRESS_OVER_4X
	bool "x4"
config OUR_BME680_PRESS_OVER_8X
	bool "x8"
config OUR_BME680_PRESS_OVER_16X
	bool "x16"
endchoice

choice OUR_BME680_HUMIDITY_OVERSAMPLING
	prompt "BME680 humidity oversampling"
	default OUR_BME680_HUMIDITY_OVER_1X
	help
	  Select humidity oversampling for the BME680 sensor.  Higher values
	  lead to more accurate readings, but higher power consumption.
config OUR_BME680_HUMIDITY_OVER_1X
	bool "x1"
config OUR_BME680_HUMIDITY_OVER_2X
	bool "x2"
config OUR_BME680_HUMIDITY_OVER_4X
	bool "x4"
config OUR_BME680_HUMIDITY_OVER_8X
	bool "x8"
config OUR_BME680_HUMIDITY_OVER_16X
	bool "x16"
endchoice

choice OUR_BME680_FILTER_COEFFICIENT
	prompt "BME680 IIR low-pass filter coefficient"
	default OUR_BME680_FILTER_OFF
	help
	  Select the filter coefficient for the BME680 sensor.
config OUR_BME680_FILTER_OFF
	bool "filter off"
config OUR_BME680_FILTER_2
	bool "2"
config OUR_BME680_FILTER_4
	bool "4"
config OUR_BME680_FILTER_8
	bool "8"
config OUR_BME680_FILTER_16
	bool "16"
config OUR_BME680_FILTER_32
	bool "32"
config OUR_BME680_FILTER_64
	bool "64"
config OUR_BME680_FILTER_128
	bool "128"
endchoice

choice OUR_BME680_HEATR_TEMP
	prompt "BME680 gas sensor's heater temperature in degree Celsius"
	default OUR_BME680_HEATR_TEMP_LP
	help
	  Select the gas sensor's heater temperature for the BME680 sensor.
config OUR_BME680_HEATR_TEMP_LP
	bool "320"
config OUR_BME680_HEATR_TEMP_ULP
	bool "400"
endchoice

choice OUR_BME680_HEATR_DUR
	prompt "BME680 gas sensor's heating duration in milliseconds"
	default OUR_BME680_HEATR_DUR_LP
	help
	  Select the gas sensor's heating duration for the BME680 sensor.
config OUR_BME680_HEATR_DUR_LP
	bool "197"
config OUR_BME680_HEATR_DUR_ULP
	bool "1943"
endchoice

endif # OUR_BME680
